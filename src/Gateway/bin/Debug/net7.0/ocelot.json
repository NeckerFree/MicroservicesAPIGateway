{
  "Aggregates": [
    {
      "UpstreamPathTemplate": "/api/ClientJobs",
      "RouteKeys": [ "Clients", "Jobs" ],
      "Aggregator":  "ClientJobsAggregator"
    }
  ],

  "Routes": [
    {
      "UpstreamPathTemplate": "/api/JobPosition",
      "UpstreamHttpMethod": [ "GET" ],

      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7257
        }
      ],
      "DownstreamPathTemplate": "/api/JobPosition",
      "Key": "Jobs",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "Role": "GeneralUser"
      },
      "DelegatingHandlers": [ "BlackListHandler" ]
    },
    {
      "UpstreamPathTemplate": "/api/Client",
      "UpstreamHttpMethod": [ "GET" ],

      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7185
        }
      ],
      "DownstreamPathTemplate": "/api/Client",
      "Key": "Clients",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "Role": "SuperAdmin"
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 5,
        "Limit": 1
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7020"
  }
}
