{
  "Aggregates": [
    {
      "UpstreamPathTemplate": "/api/ClientJobs",
      "RouteKeys": [ "Clients", "Jobs" ],
      "Aggregator":  "ClientJobsAggregator"
    }
  ],

  "Routes": [
    {
      "UpstreamPathTemplate": "/api/JobPosition",
      "UpstreamHttpMethod": [ "GET" ],

      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7257
        }
      ],
      "DownstreamPathTemplate": "/api/JobPosition",
      "Key": "Jobs",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "UpstreamPathTemplate": "/api/Client",
      "UpstreamHttpMethod": [ "GET" ],

      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7185
        }
      ],
      "DownstreamPathTemplate": "/api/Client",
      "Key": "Clients",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7020"
  }
}
